{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2016",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "checkJs": true,
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}